<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">


    <display-name>Archetype Created Web Application</display-name>

    <servlet>
        <servlet-name>LoginTemplate</servlet-name>
        <jsp-file>/login.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>LoginTemplate</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UserServlet</servlet-name>
        <servlet-class>pl.sdacademy.UserServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/user</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>User</servlet-name>
        <jsp-file>/user.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>User</servlet-name>
        <url-pattern>/user.jsp</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AddMovieTemplate</servlet-name>
        <jsp-file>/addMovie.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>AddMovieTemplate</servlet-name>
        <url-pattern>/addMovie</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>MyAccount</servlet-name>
        <jsp-file>/newIndex.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>MyAccount</servlet-name>
        <url-pattern>/myaccount</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>addMovieServlet</servlet-name>
        <servlet-class>pl.sdacademy.AddMovieServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>addMovieServlet</servlet-name>
        <url-pattern>/addUser</url-pattern>
    </servlet-mapping>



</web-app>

